<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_back"
    android:orientation="vertical"
    android:id="@+id/linearLayout"
    android:weightSum="1"
    tools:context="com.effone.mobile.MainActivity">

    <include layout="@layout/fragment_common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".62"
        android:orientation="horizontal">

        <!--  first section we are handling her-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".49"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.23"
                android:layout_marginTop="3dp"
                android:src="@drawable/reserovipa_logo" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />
            <TextView
                android:id="@+id/tv_dateandtime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.27"
                android:text="mm/dd/yyyy \n Monday"
                android:textColor="@color/black"
                android:gravity="right|center"
                android:textSize="@dimen/date_time" />

            <TextView
                android:id="@+id/tv_about_heading"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.08"
                android:gravity="left|center"
                android:textColor="@color/black"
                android:text="About"
                android:textSize="@dimen/heading" />

            <TextView
                android:id="@+id/tv_about_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.44"
                android:text="@string/aboutUs"
                android:textSize="@dimen/about" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight=".005"
            android:background="@color/divider" />

        <!--  seconf section we are handling her-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".49"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_booking_app"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:drawableTop="@mipmap/ic_booking_appiontment"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/black"
                android:text="@string/booking_app"
                android:textAlignment="center"
                android:textSize="@dimen/heading" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".005"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tv_history"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:drawableTop="@mipmap/ic_history"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/histroy"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="@dimen/heading" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".005"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tv_contact_us"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:drawableTop="@mipmap/ic_contact_us"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/contact_us"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="@dimen/heading" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".003"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".38"
        android:orientation="vertical"
        android:background="@color/list_back"
        android:weightSum="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_count_appointments"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingBottom="5dp"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:background="@color/upcoming_appointment_count"
                android:text="0"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/heading"
                android:textStyle="bold" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"
                android:padding="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:background="@color/dayName"
                android:text="@string/upcomingAppointment"
                android:textColor="#ffffff"
                android:textSize="@dimen/heading"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".005"
            android:background="@color/divider" />

        <ListView
            android:id="@+id/lv_upcomingAppointent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:layout_weight="0.98"/>
        <LinearLayout
            android:id="@+id/tv_empty_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:background="@color/list_back"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="No appointment found,\n please book a new appointment."
                android:textSize="@dimen/header"
                android:textColor="@color/hostisMe"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
