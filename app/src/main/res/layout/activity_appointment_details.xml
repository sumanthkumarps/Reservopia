<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include
        android:id="@+id/tool_bar"
        layout="@layout/fragment_common_header"
        ></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar"
        android:text="@string/upcomingAppointment"
        android:id="@+id/tv_upcoming"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:id="@+id/line2"
        android:layout_below="@+id/tv_upcoming"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_below="@+id/tv_upcoming"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_serviceDescrition"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                style="@style/appointmentScreen"
                android:text="Confirmation #"
                android:layout_alignRight="@+id/textView7"
                android:layout_alignEnd="@+id/textView7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView8"
                style="@style/appointmentScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text=":" />

            <TextView
                android:id="@+id/tv_confimration"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:text="TextView"
                style="@style/appointmentScreen"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                style="@style/appointmentScreen"
                android:text="Email"
                />
            <TextView
                android:id="@+id/textView11"
                style="@style/appointmentScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text=":" />
            <TextView
                android:id="@+id/tv_email"
                style="@style/appointmentScreen"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"

                android:text="TextView"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                style="@style/appointmentScreen"
                android:text="First Name"
                />
            <TextView
                android:id="@+id/textView23"
                style="@style/appointmentScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                />

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:text="TextView"
                style="@style/appointmentScreen"
                android:layout_below="@+id/tv_email"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:id="@+id/li_last_name"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                style="@style/appointmentScreen"

                android:text="Last Name"
                />
            <TextView
                android:id="@+id/textView22"
                style="@style/appointmentScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView19"
                android:layout_alignStart="@+id/textView19"
                android:layout_alignTop="@+id/textView20"
                android:text=":" />
            <TextView
                android:id="@+id/tv_appointment_id"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/textView5"
                style="@style/appointmentScreen"
                android:text="TextView"
                android:layout_toEndOf="@+id/textView17"
                android:layout_alignLeft="@+id/tv_userName"
                android:layout_alignStart="@+id/tv_userName" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5"
                style="@style/appointmentScreen"

                android:text="Loc Name"
                android:layout_alignRight="@+id/textView4"
                android:layout_alignEnd="@+id/textView4" />
            <TextView
                android:id="@+id/textView19"
                style="@style/appointmentScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView18"
                android:layout_alignRight="@+id/textView18"
                android:layout_alignTop="@+id/textView7"
                android:text=":" />
            <TextView
                android:id="@+id/tv_locName"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                style="@style/appointmentScreen"
                android:layout_alignLeft="@+id/tv_appointment_id"
                android:layout_alignStart="@+id/tv_appointment_id"
                android:layout_alignTop="@+id/textView6"
                android:text="TextView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView6"
                style="@style/appointmentScreen"

                android:text="Service Name"
                android:layout_alignRight="@+id/textView20"
                android:layout_alignEnd="@+id/textView20" />
            <TextView
                android:id="@+id/textView18"
                style="@style/appointmentScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_locName"
                android:layout_alignBottom="@+id/tv_locName"
                android:layout_centerHorizontal="true"
                android:text=":" />
            <TextView
                android:id="@+id/tv_serviceName"
                android:layout_width="0dp"
                android:layout_weight=".5"
                style="@style/appointmentScreen"
                android:layout_height="wrap_content"
                android:text="TextView"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView20"
                style="@style/appointmentScreen"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView7"

                android:text="Appointment Date" />
            <TextView
                style="@style/appointmentScreen"
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView5"
                android:layout_alignBottom="@+id/textView5"
                android:layout_alignLeft="@+id/textView16"
                android:layout_alignStart="@+id/textView16"
                android:text=":" />
            <TextView
                android:id="@+id/tv_appointment_date"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                style="@style/appointmentScreen"
                android:text="TextView"
                android:layout_alignBaseline="@+id/textView22"
                android:layout_alignBottom="@+id/textView22"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/tv_serviceName"
                android:layout_alignStart="@+id/tv_serviceName" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textview20"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:text="Address"
                style="@style/appointmentScreen"
                android:layout_below="@+id/textView21"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/textView21"
                android:layout_alignEnd="@+id/textView21" />

            <TextView
                android:id="@+id/textView16"
                style="@style/appointmentScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView15"
                android:layout_alignStart="@+id/textView15"
                android:layout_alignTop="@+id/textView4"
                android:text=":" />
            <TextView
                android:id="@+id/tv_address"
                style="@style/appointmentScreen"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_timeZone"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/tv_timeZone"
                android:layout_alignTop="@+id/textView23"
                android:text="Sumanth is done this Appointment " />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView21"
                style="@style/appointmentScreen"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="Scheduled Time Zone" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                style="@style/appointmentScreen"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_confimration"
                android:layout_alignBottom="@+id/tv_confimration"
                android:layout_centerHorizontal="true"
                android:text=":" />
            <TextView
                android:id="@+id/tv_timeZone"
                style="@style/appointmentScreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView11"
                android:layout_alignBottom="@+id/textView11"
                android:layout_alignLeft="@+id/tv_appointment_date"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/tv_appointment_date"
                android:layout_weight="0.5"
                android:text="TextView" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:id="@+id/li_orgName"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView25"
                style="@style/appointmentScreen"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="Org Name" />


            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                style="@style/appointmentScreen"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_confimration"
                android:layout_alignBottom="@+id/tv_confimration"
                android:layout_centerHorizontal="true"
                android:text=":" />
            <TextView
                android:id="@+id/tv_orgName"
                style="@style/appointmentScreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView11"
                android:layout_alignBottom="@+id/textView11"
                android:layout_alignLeft="@+id/tv_appointment_date"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/tv_appointment_date"
                android:layout_weight="0.5"
                android:text="TextView" />
        </LinearLayout>




























    </LinearLayout>

    <TextView
        android:id="@+id/tv_editAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Edit Appointment"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="gone"
        android:padding="5dp"
        android:background="@color/home_background"/>


</RelativeLayout>
