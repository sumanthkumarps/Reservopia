<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.effone.mobile.Activity.AppointementBookingActivity">
    <include layout="@layout/fragment_common_header"
        android:id="@+id/tool_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_date_time"
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_below="@+id/tool_bar"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="@string/date_time"
            android:padding="5dp"
            android:textSize="@dimen/font_size"
            android:layout_weight=".4"/>
        <EditText
            android:id="@+id/et_date"
            android:layout_width="match_parent"
            android:layout_weight=".6"
            android:layout_height="40dp"
            android:clickable="true"
            android:editable="false"
            android:focusable="false" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_gridView"
        android:layout_below="@+id/lv_date_time"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:text="@string/time_slot"
            android:textSize="@dimen/font_size" />

        <GridView
            android:id="@+id/gv_timeSlots"
            android:layout_width="match_parent"
            android:layout_height="318dp"
            android:gravity="left"
            android:numColumns="4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_corner"
            android:stretchMode="columnWidth"></GridView>
    </LinearLayout>



